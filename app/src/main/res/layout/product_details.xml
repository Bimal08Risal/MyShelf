<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAccent"
    android:elevation="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/product_details_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/product_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D4D4D4"
        android:padding="16dp"
        android:text="Product Details"
        android:textColor="#9C9C9C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_details_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Priya Sufi is a new novel written by Subin Bhattarai. The novel is a motivational story about sisters. Considering the rise in suicide rates, the author tries to address issues related to suicide. Subin Bhattarai hoped to enlighten the youths about the true aspects of living. Bhattarai said that the book mainly targets the youths. Priya Sufi is a motivational story about sisters. Considering the rise in suicide rates, the author  tries to address issues related to suicide. He hopes to enlighten the youths about the true aspects of living."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_details_title" />
</android.support.constraint.ConstraintLayout>